                  <form action="/notifications/<%= blog._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="title">Title</label>
                      <input type="text" class="form-control" id="title" name="title" placeholder="Enter the title" value="<%= blog.title %> ">
                    </div>
                    <div class="form-group">
                      <label for="image">Image</label>
                      <input type="file" class="form-control-file" id="image" name="image">
                    </div>
                    <% if (blog.image) { %>
                      <img src="<%= blog.image %>" width="300px">
                    <% } %>
                    <div class="form-group">
                      <label for="description">Description</label>
                      <textarea type="file" class="form-control" name="description" id="description" rows="3"><%= blog.description %> </textarea>
                    </div>
                   
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
