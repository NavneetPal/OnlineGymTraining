    <link rel="stylesheet" href="css/style.css">
    <style>
        /* .blog-item{
            border-bottom: 1px solid #ccc;
            padding-bottom: 30px;
            margin-bottom: 30px;
            margin-left: 300px;
        } */
        .navbar{
            padding: 0;
            background-color: #262626;
        }
        .navbar-nav a{
            font-size:16px;
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
        }
        .navbar-brand{
            font-size: 45px;
        }
        .breadcumb-image{
            background-image: url('https://images.unsplash.com/photo-1605296867304-46d5465a13f1?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            height: 300px;
        }
        .breadcumb-image{
            display: flex;
            flex-direction:column;
            justify-content: center;
            align-items: center;
            color: #fff;
        }
        .bg-overley{
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
    </style>
    <title>NOTIFICATION</title>
  </head>
  <body>
    
     <!--navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark" id="navbarogt">
        <div class="container">
            <a class="navbar-brand" href="/">OGT</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto" style="margin-right:150px">
            <li class="nav-item">
              <a class="nav-link" href="/">HOME <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">ABOUT</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/store">STORE</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/notifications">NOTIFICATION</a>
            </li>
            <% if (currentUser) { %>
              <li class="nav-item ">
                <a class="nav-link" href="#"><span style="color:#f1eeee">WELCOME <%= (currentUser.username).toUpperCase() %></span></a>
              </li>
            <% } %>
            
          </ul>
        </div>
        </div>
    </nav>
    <!--Navbar Over-->

    <!--Breadcumb Section-->
    <div class="breadcumb-image">
        <div class="bg-overlay" style="background-color:transparent"></div>
        <div class="breadcumb-title">
            <h2 class="font-bold text-uppercase">HOME - NOTIFICATIONS</h2>
        </div>
    </div>
    <!---Breadcumb Section over here-->
  


    <!--All notification coming from the database comes here -->
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-3">
                <p class="lead">OGT</p>
                <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <% blogs.forEach(blog => { %>
                <div class="mb-5">
                    <img class="img-fluid" width="100%" src="<%= blog.image %>">
                    <div class="mt-4">
                        <h4 style="font-size:30px;"><a href="/notifications/<%= blog._id%>"><%=blog.title %></a></h4>
                        <p> <%= blog.description.substring(0,100) %>.......... </p>
                        <p>
                            <em> Submitted On: <%= blog.createdAt.toDateString() %>  </em>
                        </p>
                    </div>
                    <div class="text-right">
                        <a class="btn btn-success"  href="/notifications/<%= blog._id%>">READ MORE</a>
                    </div>
                    <hr>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <!--All notification ends here-->

     <!-- footer -->
     <footer class="mt-5" style="padding-top:100px;">
        <div class="container">
            <div class="row pb-2">
                <div class="col-md-12">
                    <div class="d-flex justify-content-around">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link active" href="#">Terms & Conditions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Refund Policy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">COPYRIGHT <span>&#169;</span> 2020 OGT
                                </a>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="fab fa-facebook fa-2x"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="fab fa-instagram fa-2x"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="fab fa-telegram-plane fa-2x"></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#"><i class="fab fa-youtube fa-2x"></i></a>
                            </li>
                            <span class="border-right" style="border-width: thick;"></span>
                        </ul>
                    </div>


                </div>
            </div>

        </div>
        </div>
    </footer>

