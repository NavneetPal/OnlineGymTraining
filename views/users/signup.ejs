    <title>signup</title>
  </head>
  <body style="background: rgba(16,26,56,1);">
    
    
    <div class="container-fluid box mt-3 mb-3" >
        <div id="cutfromtop">
          <a href="/"><i class="far fa-times-circle"style="font-size:48px;color:grey"></i></a>
        </div>
        <div class="container">
            <div class="row">
                <div class="d-none d-lg-block col-md-6 LOGINMEN">
                </div>
                <div class="col-md-12 col-lg-6 optic1">
                    <div id="OGT">
                        <span>OGT</span>
                    </div>
                    <div id="WELCOME_BACK">
                        <span>W</span><span style="color:rgba(255,255,255,1);">ELCOME B</span><span>A</span><span style="color:rgba(255,255,255,1);">CK</span>
                    </div>
                    <form class="mt-5" action="/signup" method="POST">
                        <div class="form-group">
                          <label for="username" class="form-label" style="color:rgba(255,255,255,1)">Username</label>
                          <input type="text" class="form-control" placeholder="Username" id="username" name="username" required>
                        </div>
                        <div class="form-group">
                          <label for="email" class="form-label"  style="color:rgba(255,255,255,1)">Email</label>
                          <input type="email" class="form-control" placeholder="Your Email Here" id="email" name="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$">
                        </div>
                        <div class="form-group">
                          <label for="password" class="form-label"  style="color:rgba(255,255,255,1)">Password</label>
                          <input type="password" class="form-control" placeholder="Password" id="passowrd" name="password">
                        </div>
                        <div class="mt-5 text-center">
                            <button class="btn btn-block btn-sm rounded-lg" style="border-color:rgba(186,62,4,1);color:rgba(186,62,4,1);font-size:20px;">SIGN UP</button>
                        </div>
                        <div class="mt-2">
                          <p class="text-center">
                            <span class="text-muted">By clicking "signup" you agree to our </span> <br>
                            <a href="#" class="text-white">Term of Service</a> <span class="text-muted">& </span><a href="#" class="text-white">Privacy Policy</a>
                          </p>
                        </div>
                      </form>
                      <p class="text-center" style="color:rgba(186,62,4,1)">  Or Continue With </p>
                      <div class="text-center">
                          <a href="#" class="mr-5" style="font-size:20px"><i class="fa fa-2x fa-google" style="color:rgba(186,62,4,1)"></i></a>
                          <a href="#" style="font-size:20px"><i class="fa fa-2x fa-facebook" style="color:rgba(186,62,4,1)"  ></i></a>
                      </div>
                </div>
            </div>
        </div>
    </div>





