<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="/imgs/ogtHeader2.png" type="image/png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/gymtrainer.css">
    <style>
        .navbar{
            padding: 0;
            background-color: #262626;
        }
        .navbar-nav a{
            font-size:16px;
            font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
        }
        .navbar-brand{
            font-size: 45px;
        }
        .breadcumb-image{
            background-image: url('imgs/breadcrumb.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            height: 300px;
        }
        .breadcumb-image{
            display: flex;
            flex-direction:column;
            justify-content: center;
            align-items: center;
            color: #fff;
        }
        .bg-overley{
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .navbar.scrolled{
            background-color: #2b3636;
            transition:background-color 500ms;
        }
        .nav li a {
            color: #8a8a8a;
            width: auto;
            display: block;
            text-decoration: none;
            background-color: transparent;
            font-size: 12px;
            font-weight: 700;
        }
    </style>
    <title>ABOUT US</title>
  </head>
  <body>
    
     <!--navbar-->
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark" id="navbarogt">
        <div class="container">
            <a class="navbar-brand" href="/"><img src="imgs/OGTLOGO.png" width="75px" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto" style="margin-right:150px">
            <li class="nav-item">
              <a class="nav-link" href="/">HOME <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/about">ABOUT</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/store">STORE</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/notifications">NOTIFICATION</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart">
                <i class="fas fa-2x fa-shopping-cart">
                  <span class="badge bg-primary" style="font-size:10px">
                    <% if (session.cart) { %>
                      <%= session.cart.totalQty %> 
                    <% }else{ %>
                    0
                    <% } %> 
                  </span>
                </i>
              </a>
            </li>
            <% if (currentUser) { %>
              <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      WELCOME <%= (currentUser.username).toUpperCase() %>
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/user">User Profile</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/signout">SignOut</a>
                  </div>
              </li>
          <% } %>
            
          </ul>
        </div>
        </div>
    </nav>
    <!--Navbar Over-->

    <!--Breadcumb Section-->
    <div class="breadcumb-image">
        <div class="bg-overlay" style="background-color:transparent"></div>
        <div class="breadcumb-title">
            <h2 class="font-bold text-uppercase">TRAINER</h2>
        </div>
    </div>
    <!---Breadcumb Section over here-->

    <div class="mt-5 trainer-details-area padding-space">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="trainer-detail-image">
                        <div class="detail-image">
                            <img src=<%= trainer.image %>   width="325px" height="555px" alt="">
                        </div>
                        <div class="trainer-info">
                            <p><span>Experience:</span><%= trainer.experience %>  Years</p>
                            <p><span>E-mail:</span><%= trainer.email %> </p>
                            <p><span>Phone:</span><%= trainer.phone %> </p>
                            <ul>
                                <li><a href="#"><i class="fab fa-facebook-square" style="font-size: 1.2rem;" aria-hidden="true"></i></a></li>
                                <li><a href="#"><i class="fab fa-twitter" aria-hidden="true" style="font-size: 1.2rem;"></i></a></li>
                                <li><a href="#"><i class="fab fa-linkedin" aria-hidden="true" style="font-size: 1.2rem;"></i></a></li>
                                <li><a href="#"><i class="fab fa-google-plus" aria-hidden="true"></i></a></li>
                              
                            </ul>
                        </div>
                    </div>
                </div>
    
                <div class="col-lg-8 col-md-8 col-sm-8">
                    <div class="trainer-detail-content">
                        <div class="detail-heading">
                            <h2><%= trainer.name %> </h2>
                            <p><span class="degination"><%= trainer.field %> </span></p>
                            <p><span class="title">Biography:</span></p>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut sodales ante quis justo egestas euismod. Aenean feugiat nisi commodo quam ornare dictum. Nullam a nunc non mi commodo finibus. Cras fermentum dictum turpis ac scelerisque. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                        </div>
                        <div class="skill-content-3 ml-4">
                            <h3>Skills:</h3>
                            <div class="skill">
                                <!-- PROGRESS START -->
                                <div class="progress" style="height: 10px;">
                                    <div class="lead">Yoga</div>
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 85%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">85%</div>
                                  </div>
                                    
                                   
                                <!-- PROGRESS END -->           
                                <!-- PROGRESS START -->
                                <div class="progress" style="height: 10px;">
                                    <div class="lead">Boxing</div>
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 95%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">95%</div>
                                  </div>
                                <!-- PROGRESS END -->
                                <!-- PROGRESS START -->             
                                <div class="progress" style="height: 10px;">
                                    <div class="lead">GYM</div>
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 85%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">85%</div>
                                  </div> 
                                <!-- PROGRESS END -->                         
                            </div>            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    
    <!--Footer-->
    <footer>
      <div class="container">
        <div class="row pb-2">
            <div class="col-md-12">
              <div class="d-flex justify-content-around">
                <ul class="nav">
                  <li class="nav-item">
                    <a class="nav-link active" href="#">Terms & Conditions</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#">Privacy</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#">Refund Policy</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#">COPYRIGHT <span>&#169;</span> 2020 OGT
                    </a>
                  </li>
                </ul>
                <ul class="nav">
                  <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fab fa-facebook fa-2x"></i></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fab fa-instagram fa-2x"></i></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fab fa-telegram-plane fa-2x"></i></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fab fa-youtube fa-2x"></i></a>
                  </li>
                  <span class="border-right" style="border-width: thick;"></span>
                </ul>
              </div>
              

            </div>
          </div>
          
        </div>
      </div>
    </footer>
